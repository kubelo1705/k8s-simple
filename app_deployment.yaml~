apiVersion: apps/v1
kind: Deployment
metadata:
  name: myweb
spec:
  selector:
    matchLabels:
      app: myweb
  replicas: 3
  template:
    metadata:
      labels:
        app: myweb
    spec:
      containers:
        - name: myweb
          image: kubelo1705/demo-docker
          ports:
            - containerPort: 8080
          env:  
          - name: SPRING_DATASOURCE_URL
            value: "jdbc:mysql://mysql:3306/docker?createDatabaseIfNotExist=true"
          - name: SPRING_DATASOURCE_USERNAME
            value: root
          - name: SPRING_DATASOURCE_PASSWORD
            value: 123456

